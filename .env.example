# Environment Variables Template
# Copy this to .env.local and fill in your values

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="J Supreme Market Institute"

# OpenAI API (Optional - for advanced AI chatbot features)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Analytics (Optional)
# Vercel Analytics is built-in, no key needed
# For Google Analytics:
NEXT_PUBLIC_GA_ID=

# Email Service (Optional - for newsletters)
# Example with SendGrid:
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# Database (Optional - for user data)
# Example with Supabase:
DATABASE_URL=
DIRECT_URL=

# Authentication (Optional - future feature)
# Example with NextAuth:
NEXTAUTH_SECRET=
NEXTAUTH_URL=

# Social Media Links
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/jsupreme
NEXT_PUBLIC_YOUTUBE_URL=https://youtube.com/@jsupreme
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/jsupreme
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/jsupreme

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_CHATBOT=true
NEXT_PUBLIC_ENABLE_VOICE_INPUT=true
NEXT_PUBLIC_ENABLE_COMMUNITY=true

# Admin Configuration (Optional)
ADMIN_EMAIL=admin@jsupreme.com
