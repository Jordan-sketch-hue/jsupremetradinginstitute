# Environment Variables Template - J Supreme Trading Bot
# Copy this to .env.local and fill in your values

# ==========================================
# CORE BOT CONFIGURATION
# ==========================================

# Trading Enable/Disable
ALLOW_TRADING=false              # Set to true to enable automated trading
ARMED=false                       # Set to true to auto-execute signals (start false!)

# Account & Risk Settings
ACCOUNT_BALANCE=10000             # Your trading account balance
RISK_PER_TRADE=0.10               # Risk as % per trade (0.10 = 10%)
MAX_TRADES_OPEN=5                 # Max concurrent open positions
DEFAULT_LOT=0.10                  # Default lot size
DEFAULT_MAX_LOT=2.0               # Maximum lot size per trade
MAX_SPREAD_POINTS=50              # Max allowed spread (50 = 0.50 pips)

# ==========================================
# TELEGRAM CONFIGURATION
# ==========================================

# Telegram Bot Setup (Get from https://t.me/BotFather)
TELEGRAM_BOT_TOKEN=               # Your bot token (e.g., 123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11)
TELEGRAM_WEBHOOK_SECRET=          # Secret for webhook security (random string)

# Telegram Group IDs (Get with @userinfobot in the group)
# Provider group = where you receive signals
PROVIDER_GROUP_ID=                # Group ID that SENDS signals (e.g., -1001234567890)

# Execution group = where bot sends updates
EXEC_GROUP_ID=                    # Group ID where bot will POST updates
EXEC_GROUP_NAME_OR_ID=            # Alternative to EXEC_GROUP_ID

# Website Signal Integration
WEBSITE_SIGNAL_API_KEY=           # API key for website signals (/api/bot/signal)

# Telegram Notifications
SEND_TELEGRAM_UPDATES=true        # Send trade updates to Telegram
MIN_ALERT_CONFIDENCE=0.65         # Minimum confidence (0-1) before executing

# ==========================================
# MT5 BROKER INTEGRATION
# ==========================================

# MT5 Account Credentials
MT5_ENABLED=false                 # Set to true when ready for live MT5 trading
MT5_ACCOUNT_TYPE=demo             # 'demo' or 'live'
MT5_ACCOUNT=                      # Your MT5 account number
MT5_PASSWORD=                     # Your MT5 password
MT5_SERVER=MT5-Demo               # Your broker's MT5 server

# MT5 API Configuration
MT5_API_KEY=                      # API key for MT5 connection
MT5_DEMO_API_URL=https://mt5-demo.broker.com    # Demo server API
MT5_LIVE_API_URL=https://mt5-live.broker.com    # Live server API (CAREFULLY!)

# MT5 Symbol Mapping
MT5_SYMBOL_PREFIX=                # Prefix for symbols on broker (e.g., "LMAX." or "IC.")

# ==========================================
# MARKET DATA APIS
# ==========================================

# TwelveData API (Real-time market data)
TWELVE_DATA_API_KEY=              # From https://twelvedata.com

# Alternative: Finnhub API
FINNHUB_API_KEY=

# Alternative: Alpha Vantage
ALPHA_VANTAGE_API_KEY=

# ==========================================
# VALIDATION & FILTERING SETTINGS
# ==========================================

# Alert Validation
VALIDATOR_ENABLED=true            # Enable multi-criteria alert validation
MIN_RR_RATIO=0.5                  # Minimum Risk:Reward (0.5:1)
MAX_RR_RATIO=5.0                  # Maximum Risk:Reward (5:1)

# Asset Category Filtering
ALLOW_FOREX=true
ALLOW_CRYPTO=true
ALLOW_INDICES=true
ALLOW_COMMODITIES=true

# Volatility Checks
VOLATILITY_CHECK_ENABLED=true
ATR_PERIOD=14                     # ATR period for volatility check
MAX_ATR_RATIO=0.05                # Max SL as % of ATR

# ==========================================
# JOURNAL & LOGGING
# ==========================================

# Trade Journal
TRADE_JOURNAL_FILE=trade_journal.csv
TRADE_JOURNAL_BACKUP_DIR=./backups
JOURNAL_AUTO_BACKUP=true

# Bot Logging
BOT_LOG_FILE=bot.log
BOT_ERROR_LOG_FILE=bot.errors.log
LOG_MAX_SIZE=10485760             # 10MB before rotation
LOG_RETENTION_DAYS=30             # Keep logs for 30 days

# Debug Mode
DEBUG=false                       # Verbose logging

# ==========================================
# NOTIFICATION SETTINGS
# ==========================================

# Email Alerts (Optional)
EMAIL_ALERTS_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=

# Daily Summary
SEND_DAILY_SUMMARY=true
SUMMARY_TIME=09:00                # UTC time to send daily summary

# ==========================================
# SITE CONFIGURATION
# ==========================================

NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="J Supreme Market Institute"

# OpenAI API (Optional - for advanced AI chatbot features)
OPENAI_API_KEY=

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=

# Email Service (Optional - for newsletters)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# Database (Optional - for user data)
DATABASE_URL=
DIRECT_URL=

# Authentication (Optional - future feature)
NEXTAUTH_SECRET=
NEXTAUTH_URL=

# Social Media Links
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/jsupreme
NEXT_PUBLIC_YOUTUBE_URL=https://youtube.com/@jsupreme
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/jsupreme
NEXT_PUBLIC_DISCORD_URL=https://discord.gg/jsupreme

# Feature Flags
NEXT_PUBLIC_ENABLE_CHATBOT=true
NEXT_PUBLIC_ENABLE_VOICE_INPUT=true
NEXT_PUBLIC_ENABLE_COMMUNITY=true

# Admin Configuration
ADMIN_EMAIL=admin@jsupreme.com

# ==========================================
# QUICK START GUIDE
# ==========================================

# 1. TELEGRAM SETUP
#    a) Create bot at https://t.me/BotFather
#    b) Copy token to TELEGRAM_BOT_TOKEN
#    c) Add bot to your signal group
#    d) Message @userinfobot in group, copy chat ID to PROVIDER_GROUP_ID
#    e) Create execution group, get ID, copy to EXEC_GROUP_ID
#    f) Set TELEGRAM_WEBHOOK_SECRET to random string
#
# 2. MT5 SETUP (Optional but recommended for live trading)
#    a) Set MT5_ACCOUNT and MT5_PASSWORD
#    b) Get MT5_SERVER from your broker
#    c) Set MT5_ENABLED=true (start with demo!)
#    d) Test with ARMED=false first
#
# 3. WEBSITE SIGNALS
#    a) Generate WEBSITE_SIGNAL_API_KEY (random string)
#    b) POST to /api/bot/signal with your website
#    c) Include header: X-API-Key: [your key]
#
# 4. START BOT
#    a) npm run dev (local testing)
#    b) ALLOW_TRADING=true (enable execution)
#    c) ARMED=false (test without auto-execution)
#    d) ARMED=true (enable auto-execution)
#    e) Monitor dashboard at /bot-dashboard
#
# 5. DEPLOY TO VERCEL
#    a) git push origin main (auto-deploys)
#    b) Add env vars in Vercel dashboard
#    c) Test webhook: /api/telegram/webhook (GET)
